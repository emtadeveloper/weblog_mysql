<div class="row mbn-30">
  <!-- Revenue Statistics Chart Start -->
  <div class="col-md-12 mb-30">
    <div class="box">
      <div class="box-head">
        {{#if hasError}}
          <div class="alert alert-outline-secondary" role="alert">
            {{#each errors}}
              <p class="alert-link">{{this}}</p>
            {{/each}}
          </div>
        {{/if}}
        <div class="row">
          <h4 class="title">اطلاعات مطلب</h4>
        </div>
      </div>
      <div class="box-body">
        <form action="/admin/posts/store" method="POST">
          <div class="row mbn-20">
            <div class="col-12 mb-20">
              <input
                type="text"
                name="title"
                id="formLayoutUsername3"
                class="form-control"
                placeholder="عنوان  مطلب"
              />
            </div>
            <div class="col-12 mb-15">
              <select name="auther" class="form-control">
                {{#each users}}
                  <option value="{{this.id}}">{{this.full_name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="col-12 mb-20">
              <input
                type="email"
                id="formLayoutEmail3"
                name="slug"
                class="form-control"
                placeholder="نامک مطلب"
              />
            </div>
            <div class="col-12 mb-20">
              <textarea
                name="content"
                id="formLayoutMessage1"
                class="form-control"
                pla
                ceholder="محتوای مطلب"
              ></textarea>
            </div>

            <div class="col-12 mb-20">
              <h6 class="mb-15">وضعیت مطلب</h6>
              <div class="form-group">
                <label class="inline"><input
                    name="status"
                    type="radio"
                    value="0"
                  />پیش نویس</label>
                <label class="inline"><input
                    name="status"
                    type="radio"
                    value="2"
                  />منتشرشده</label>

                <label value="1" class="inline"><input
                    name="status"
                    type="radio"
                  />در حال بازبینی</label>
              </div>
            </div>

            <div class="col-12 mb-20">
              <input
                type="submit"
                value="ذخیره سازی"
                class="button button-primary"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Revenue Statistics Chart End -->
</div>